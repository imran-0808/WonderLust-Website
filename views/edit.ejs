<% layout("/layouts/boilerplate") %>
 
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Edit the list</h3>
    <form class="mt-3" method="POST" action="/listings/<%= listing2._id %>?_method=PUT">   
        <!-- yaha jo bhi variable hain unhe object ki key bna diya like title, description, image, etc -->
        <div class="mb-3">
            <label for="title" class="form-lable">Title</label>
            <input name="listing0[title]" value="<%= listing2.title %>" type="text" class="form-control"/>
        </div>
        <div class="mb-3">
            <label for="description" class="form-lable">Description</label>
            <textarea name="listing2[description]" class="form-control"> <%= listing2.description %></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-lable">Image</label>
            <input name="listing2[image]" value="<%= listing2.image %>" type="text" class="form-control"/>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
            <label for="price" class="form-lable">Price</label>
            <input name="listing2[price]" value="<%= listing2.price %>" type="text" class="form-control"/>
        </div>
        <div class="mb-3 col-md-4">
            <label for="country" class="form-lable">Country</label>
            <input name="listing2[country]" value="<%= listing2.country %>" type="text" class="form-control"/>
        </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-lable">Location</label>
            <input name="listing2[location]" value="<%= listing2.location %>" type="text" class="form-control"/>
        </div>
        <br>
        <button class="btn btn-dark edit-btn">Add</button>
        <br><br>
    </form>
    </div>
    </div>
</body>